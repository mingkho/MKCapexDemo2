{
    "_Type": "Action.Type.ODataService.DraftEnabled.Save",
    "Target": {
        "Service": "/MyCapexApplication/Services/service1.service",
        "EntitySet": "Capex",
        "ReadLink": "{@odata.readLink}"
    },
    "ShowActivityIndicator": true,
    "ActionResult": {
        "_Name": "update"
    },
    "OnSuccess": {
        "Name": "/MyCapexApplication/Actions/UpdateEntitySuccessMessage.action",
        "Properties": {
            "Message": "Draft Saved"
        }
    },
    "OnFailure": "/MyCapexApplication/Actions/UpdateEntityFailureMessage.action"
}